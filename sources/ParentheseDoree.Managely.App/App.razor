<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layouts.MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Page non trouvée - Managely</PageTitle>
        <LayoutView Layout="@typeof(Layouts.MainLayout)">
            <div class="container py-5 text-center">
                <h1 class="display-4 text-muted">
                    <i class="bi bi-exclamation-triangle"></i>
                </h1>
                <h2 class="h4 mb-4">Page non trouvée</h2>
                <p class="text-muted mb-4">La page que vous recherchez n'existe pas.</p>
                <a href="" class="btn btn-gold">
                    <i class="bi bi-house me-2"></i>Retour à l'accueil
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
