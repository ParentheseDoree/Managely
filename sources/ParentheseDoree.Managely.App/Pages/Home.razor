@page "/"
@inject FinanceService FinanceSvc
@inject ClientService ClientSvc
@inject PassageService PassageSvc
@inject ProduitService ProduitSvc
@inject GoogleAuthService AuthService
@inject BrowserLoggerService Logger
@inject NavigationManager Nav

@implements IDisposable

<PageTitle>Accueil - Managely</PageTitle>

@if (!_isAuthenticated)
{
    <LoadingSpinner />
}
else
{
    <div class="welcome-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-2">
                    <i class="bi bi-sun me-2"></i>
                    Bonjour, @(AuthService.CurrentUser?.GivenName ?? AuthService.CurrentUser?.Name) !
                </h1>
                <p class="text-muted mb-0">Bienvenue sur <strong>Managely</strong>, votre outil de gestion du centre esthétique.</p>
                <p class="text-muted small mb-0"><i class="bi bi-calendar3 me-1"></i>@DateTime.Now.ToString("dddd dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <span class="badge @(AuthService.CanWrite ? "bg-success" : "bg-warning text-dark") fs-6">
                    <i class="bi @(AuthService.CanWrite ? "bi-pencil-fill" : "bi-eye-fill") me-1"></i>
                    @(AuthService.CanWrite ? "Mode Écriture" : "Mode Lecture seule")
                </span>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <LoadingSpinner Message="Chargement des donnees..." />
    }
    else
    {
        @* Statistiques rapides — Vue d'ensemble *@
        <h6 class="text-muted mb-3"><i class="bi bi-speedometer2 me-1"></i>Vue d'ensemble</h6>
        <div class="row g-3 mb-4">
            <div class="col-6 col-lg-3">
                <StatCard Value="@_stats.TotalClients.ToString()" Label="Clients enregistrés"
                          Icon="bi-people-fill" Color="primary" Clickable="true"
                          OnClick='() => Nav.NavigateTo("clients")' Footer="Gérer les clients" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@_stats.TotalPassages.ToString()" Label="Passages (total)"
                          Icon="bi-calendar-check-fill" Color="success" Clickable="true"
                          OnClick='() => Nav.NavigateTo("passages")' Footer="Voir l'historique" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@FormatEuro(_stats.CaMoisEnCours)" Label="CA du mois en cours"
                          Icon="bi-currency-euro" Color="gold" Clickable="true"
                          OnClick='() => Nav.NavigateTo("finance")' Footer="Bilan financier" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@_stats.CartesActives.ToString()" Label="Cartes & Bons actifs"
                          Icon="bi-wallet2" Color="info" Clickable="true"
                          OnClick='() => Nav.NavigateTo("cartes-cadeaux")' Footer="Voir les cartes" />
            </div>
        </div>

        <div class="row g-4">
            @* Colonne gauche *@
            <div class="col-lg-8">
                @* Actions rapides *@
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h5 class="mb-0"><i class="bi bi-lightning-fill text-gold me-2"></i>Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (AuthService.CanWrite)
                            {
                                <div class="col-md-6 col-lg-3">
                                    <button class="btn btn-outline-primary w-100 py-3" @onclick='() => Nav.NavigateTo("clients/nouveau")'>
                                        <i class="bi bi-person-plus fs-4 d-block mb-2"></i>
                                        Nouveau client
                                    </button>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <button class="btn btn-outline-success w-100 py-3" @onclick='() => Nav.NavigateTo("passages/nouveau")'>
                                        <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                                        Nouveau passage
                                    </button>
                                </div>
                            }
                            <div class="col-md-6 col-lg-3">
                                <button class="btn btn-outline-secondary w-100 py-3" @onclick='() => Nav.NavigateTo("clients")'>
                                    <i class="bi bi-search fs-4 d-block mb-2"></i>
                                    Rechercher
                                </button>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <button class="btn btn-outline-info w-100 py-3" @onclick="RefreshAsync">
                                    <i class="bi bi-arrow-clockwise fs-4 d-block mb-2 @(_isRefreshing ? "spin" : "")"></i>
                                    Actualiser
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                @* Derniers passages *@
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h5 class="mb-0"><i class="bi bi-clock-history text-gold me-2"></i>Derniers passages</h5>
                    </div>
                    @if (_derniersPassages.Count == 0)
                    {
                        <div class="card-body text-muted">Aucun passage recent.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr><th>Date</th><th>Client</th><th>Prestations</th><th class="text-end">Total</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in _derniersPassages)
                                    {
                                        <tr class="cursor-pointer" @onclick='() => Nav.NavigateTo($"passages/{p.Guid}")'>
                                            <td>@p.Date</td>
                                            <td><strong>@GetClientNom(p.ClientGuid)</strong></td>
                                            <td class="text-truncate" style="max-width:200px;">@p.ResumePrestations</td>
                                            <td class="text-end fw-bold">@FormatEuro(p.Total)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            @* Colonne droite *@
            <div class="col-lg-4">
                @* Anniversaires du mois *@
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h5 class="mb-0">
                            <i class="bi bi-cake2 text-gold me-2"></i>Anniversaires
                            <span class="badge bg-gold ms-1">@_anniversairesCeMois.Count</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (_anniversairesCeMois.Count == 0)
                        {
                            <p class="text-muted mb-0">Aucun anniversaire ce mois-ci.</p>
                        }
                        else
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var c in _anniversairesCeMois)
                                {
                                    <li class="d-flex align-items-center mb-2">
                                        <i class="bi bi-person-circle text-gold me-2"></i>
                                        <a href="clients/@c.Guid" class="text-decoration-none">@c.NomComplet</a>
                                    </li>
                                }
                            </ul>
                        }

                        @if (_anniversairesMoisProchain.Count > 0)
                        {
                            <hr />
                            <h6 class="text-muted small mb-2">Mois prochain (@_anniversairesMoisProchain.Count)</h6>
                            <ul class="list-unstyled mb-0">
                                @foreach (var c in _anniversairesMoisProchain)
                                {
                                    <li class="small mb-1">
                                        <i class="bi bi-person text-muted me-1"></i>@c.NomComplet
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>

                @* Alertes stock *@
                @if (_alertesStock.Count > 0)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pt-3">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle text-warning me-2"></i>Alertes stock
                                <span class="badge bg-warning text-dark ms-1">@_alertesStock.Count</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                @foreach (var p in _alertesStock)
                                {
                                    <li class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@p.Nom</span>
                                        <span class="badge @(p.EstEnRupture ? "bg-danger" : "bg-warning text-dark")">
                                            Stock: @p.Stock
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-warning mt-4">
                <i class="bi bi-exclamation-triangle me-2"></i>@_errorMessage
            </div>
        }
    }
}

@code {
    private bool _isAuthenticated;
    private bool _isLoading = true;
    private bool _isRefreshing;
    private string? _errorMessage;

    private DashboardStats _stats = new();
    private List<Passage> _derniersPassages = [];
    private List<Client> _anniversairesCeMois = [];
    private List<Client> _anniversairesMoisProchain = [];
    private List<Produit> _alertesStock = [];
    private Dictionary<string, string> _clientNoms = new();

    private static string FormatEuro(decimal v) => $"{v:N0} \u20ac";
    private string GetClientNom(string guid) => _clientNoms.TryGetValue(guid, out var n) ? n : guid;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.InitializeAsync();
            if (!AuthService.IsSignedIn || !AuthService.CanRead)
            {
                Nav.NavigateTo("login");
                return;
            }

            _isAuthenticated = true;
            StateHasChanged();
            await LoadDataAsync();
        }
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            _stats = await FinanceSvc.GetStatsAsync(DateTime.Now.Month, DateTime.Now.Year);

            var passages = await PassageSvc.GetAllAsync();
            _derniersPassages = passages.OrderByDescending(p => p.Date).Take(10).ToList();

            var clients = await ClientSvc.GetAllAsync();
            _clientNoms = clients.ToDictionary(c => c.Guid, c => c.NomComplet);

            var moisActuel = DateTime.Now.Month;
            var moisProchain = moisActuel == 12 ? 1 : moisActuel + 1;
            _anniversairesCeMois = await ClientSvc.GetAnniversairesMoisAsync(moisActuel);
            _anniversairesMoisProchain = await ClientSvc.GetAnniversairesMoisAsync(moisProchain);

            _alertesStock = await ProduitSvc.GetAlertesStockAsync();
        }
        catch (Exception ex)
        {
            await Logger.ErrorAsync(LogCategory.API, "Erreur dashboard", new { error = ex.Message });
            _errorMessage = "Impossible de charger les donnees.";
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshAsync()
    {
        _isRefreshing = true;
        StateHasChanged();
        await LoadDataAsync();
        _isRefreshing = false;
        StateHasChanged();
    }

    public void Dispose() { }
}
