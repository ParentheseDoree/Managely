@page "/"
@inject ClientService ClientSvc
@inject PassageService PassageSvc
@inject ProduitService ProduitSvc
@inject CarteCadeauService CarteSvc
@inject GoogleAuthService AuthService
@inject ToastService Toast
@inject BrowserLoggerService Logger
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

@implements IDisposable

<PageTitle>Accueil - Managely</PageTitle>

@if (!_isAuthenticated)
{
    <LoadingSpinner />
}
else
{
    <div class="welcome-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-2">
                    <i class="bi bi-sun me-2"></i>
                    Bonjour, @(AuthService.CurrentUser?.GivenName ?? AuthService.CurrentUser?.Name) !
                </h1>
                <p class="text-muted mb-0">Bienvenue sur <strong>Managely</strong>, votre outil de gestion du centre esthétique.</p>
                <p class="text-muted small mb-0"><i class="bi bi-calendar3 me-1"></i>@DateTime.Now.ToString("dddd dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <span class="badge @(AuthService.CanWrite ? "bg-success" : "bg-warning text-dark") fs-6">
                    <i class="bi @(AuthService.CanWrite ? "bi-pencil-fill" : "bi-eye-fill") me-1"></i>
                    @(AuthService.CanWrite ? "Mode Écriture" : "Mode Lecture seule")
                </span>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <LoadingSpinner Message="Chargement des données..." />
    }
    else
    {
        @* Statistiques rapides *@
        <h6 class="text-muted mb-3"><i class="bi bi-speedometer2 me-1"></i>Vue d'ensemble</h6>
        <div class="row g-3 mb-4">
            <div class="col-6 col-lg-3">
                <StatCard Value="@_totalClients.ToString()" Label="Clients enregistrés"
                          Icon="bi-people-fill" Color="primary" Clickable="true"
                          OnClick='() => Nav.NavigateTo("clients")' Footer="Gérer les clients" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@_totalPassages.ToString()" Label="Passages (total)"
                          Icon="bi-calendar-check-fill" Color="success" Clickable="true"
                          OnClick='() => Nav.NavigateTo("passages")' Footer="Voir l'historique" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@_passagesMois.ToString()" Label="Passages ce mois"
                          Icon="bi-calendar-event" Color="gold" Clickable="true"
                          OnClick='() => Nav.NavigateTo("passages")' Footer="Voir les passages" />
            </div>
            <div class="col-6 col-lg-3">
                <StatCard Value="@_cartesActives.ToString()" Label="Cartes & Bons actifs"
                          Icon="bi-wallet2" Color="info" Clickable="true"
                          OnClick='() => Nav.NavigateTo("cartes-cadeaux")' Footer="Voir les cartes" />
            </div>
        </div>

        <div class="row g-4">
            @* Colonne gauche *@
            <div class="col-lg-8">
                @* Actions rapides *@
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h5 class="mb-0"><i class="bi bi-lightning-fill text-gold me-2"></i>Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (AuthService.CanWrite)
                            {
                                <div class="col-md-6 col-lg-3">
                                    <button class="btn btn-outline-primary w-100 py-3" @onclick='() => Nav.NavigateTo("clients/nouveau")'>
                                        <i class="bi bi-person-plus fs-4 d-block mb-2"></i>
                                        Nouveau client
                                    </button>
                                </div>
                                <div class="col-md-6 col-lg-3">
                                    <button class="btn btn-outline-success w-100 py-3" @onclick='() => Nav.NavigateTo("passages/nouveau")'>
                                        <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                                        Nouveau passage
                                    </button>
                                </div>
                            }
                            <div class="col-md-6 col-lg-3">
                                <button class="btn btn-outline-secondary w-100 py-3" @onclick='() => Nav.NavigateTo("clients")'>
                                    <i class="bi bi-search fs-4 d-block mb-2"></i>
                                    Rechercher
                                </button>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <button class="btn btn-outline-info w-100 py-3" @onclick="RefreshAsync">
                                    <i class="bi bi-arrow-clockwise fs-4 d-block mb-2 @(_isRefreshing ? "spin" : "")"></i>
                                    Actualiser
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                @* Derniers passages (limité à 5) *@
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent border-0 pt-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-clock-history text-gold me-2"></i>Derniers passages</h5>
                        <a href="passages" class="btn btn-sm btn-outline-secondary">
                            Voir tout <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                    @if (_derniersPassages.Count == 0)
                    {
                        <div class="card-body text-muted">Aucun passage récent.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr><th>Date</th><th>Client</th><th>Prestations</th><th class="text-end">Total</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in _derniersPassages)
                                    {
                                        <tr class="cursor-pointer" @onclick='() => Nav.NavigateTo($"passages/{p.Guid}")'>
                                            <td>@p.Date</td>
                                            <td><strong>@GetClientNom(p.ClientGuid)</strong></td>
                                            <td class="text-truncate" style="max-width:200px;">@p.ResumePrestations</td>
                                            <td class="text-end fw-bold">@FormatEuro(p.Total)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            @* Colonne droite *@
            <div class="col-lg-4">
                @* Anniversaires du mois *@
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 pt-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-cake2 text-gold me-2"></i>Anniversaires
                            <span class="badge bg-gold ms-1">@_anniversairesCeMois.Count</span>
                        </h5>
                        @if (_anniversairesCeMois.Count > 0)
                        {
                            <button class="btn btn-sm btn-outline-secondary" @onclick="CopierListeAnniversaires" title="Copier la liste">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        }
                    </div>
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        @if (_anniversairesCeMois.Count == 0)
                        {
                            <p class="text-muted mb-0">Aucun anniversaire ce mois-ci.</p>
                        }
                        else
                        {
                            <h6 class="text-muted small mb-2"><i class="bi bi-calendar-heart me-1"></i>Ce mois</h6>
                            <ul class="list-unstyled mb-0">
                                @foreach (var c in _anniversairesCeMois)
                                {
                                    <li class="d-flex align-items-center justify-content-between mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle text-gold me-2"></i>
                                            <a href="clients/@c.Guid" class="text-decoration-none">@c.NomComplet</a>
                                        </div>
                                        @if (!string.IsNullOrEmpty(c.NumeroTelephone))
                                        {
                                            <a href="tel:@c.NumeroTelephone.Replace(" ", "")" class="btn btn-sm btn-outline-success" title="Appeler @c.NumeroTelephone">
                                                <i class="bi bi-telephone"></i>
                                            </a>
                                        }
                                    </li>
                                }
                            </ul>
                        }

                        @if (_anniversairesMoisProchain.Count > 0)
                        {
                            <hr />
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="text-muted small mb-0"><i class="bi bi-calendar-plus me-1"></i>Mois prochain (@_anniversairesMoisProchain.Count)</h6>
                                <button class="btn btn-sm btn-outline-secondary py-0 px-1" @onclick="CopierListeMoisProchain" title="Copier la liste">
                                    <i class="bi bi-clipboard" style="font-size:0.75rem;"></i>
                                </button>
                            </div>
                            <ul class="list-unstyled mb-0">
                                @foreach (var c in _anniversairesMoisProchain)
                                {
                                    <li class="d-flex align-items-center justify-content-between mb-1">
                                        <span class="small">
                                            <i class="bi bi-person text-muted me-1"></i>@c.NomComplet
                                        </span>
                                        @if (!string.IsNullOrEmpty(c.NumeroTelephone))
                                        {
                                            <a href="tel:@c.NumeroTelephone.Replace(" ", "")" class="small text-muted text-decoration-none">
                                                @c.NumeroTelephone
                                            </a>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>

                @* Alertes stock *@
                @if (_alertesStock.Count > 0)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pt-3">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle text-warning me-2"></i>Alertes stock
                                <span class="badge bg-warning text-dark ms-1">@_alertesStock.Count</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                @foreach (var p in _alertesStock)
                                {
                                    <li class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@p.Nom</span>
                                        <span class="badge @(p.EstEnRupture ? "bg-danger" : "bg-warning text-dark")">
                                            Stock: @p.Stock
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    private bool _isAuthenticated;
    private bool _isLoading = true;
    private bool _isRefreshing;

    private int _totalClients, _totalPassages, _passagesMois, _cartesActives;
    private List<Passage> _derniersPassages = [];
    private List<Client> _anniversairesCeMois = [];
    private List<Client> _anniversairesMoisProchain = [];
    private List<Produit> _alertesStock = [];
    private Dictionary<string, string> _clientNoms = new();

    private static string FormatEuro(decimal v) => $"{v:N0} \u20ac";
    private string GetClientNom(string guid) => _clientNoms.TryGetValue(guid, out var n) ? n : guid;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.InitializeAsync();
            if (!AuthService.IsSignedIn || !AuthService.CanRead)
            {
                Nav.NavigateTo("login");
                return;
            }

            _isAuthenticated = true;
            StateHasChanged();
            await LoadDataAsync();
        }
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var clients = await ClientSvc.GetAllAsync();
            var passages = await PassageSvc.GetAllAsync();
            var cartes = await CarteSvc.GetAllAsync();

            _totalClients = clients.Count;
            _totalPassages = passages.Count;
            _clientNoms = clients.ToDictionary(c => c.Guid, c => c.NomComplet);

            // Passages du mois en cours
            var moisActuel = DateTime.Now.Month;
            var anneeActuelle = DateTime.Now.Year;
            _passagesMois = passages.Count(p =>
                DateTime.TryParseExact(p.Date, new[] { "dd/MM/yyyy", "yyyy-MM-dd" },
                    System.Globalization.CultureInfo.InvariantCulture,
                    System.Globalization.DateTimeStyles.None, out var d)
                && d.Month == moisActuel && d.Year == anneeActuelle);

            _cartesActives = cartes.Count(c => c.EstUtilisable);

            _derniersPassages = passages.OrderByDescending(p => p.Date).Take(5).ToList();

            var moisProchain = moisActuel == 12 ? 1 : moisActuel + 1;
            _anniversairesCeMois = await ClientSvc.GetAnniversairesMoisAsync(moisActuel);
            _anniversairesMoisProchain = await ClientSvc.GetAnniversairesMoisAsync(moisProchain);

            _alertesStock = await ProduitSvc.GetAlertesStockAsync();
        }
        catch (Exception ex)
        {
            await Logger.ErrorAsync(LogCategory.API, "Erreur dashboard", new { error = ex.Message });
            Toast.ShowError("Impossible de charger les données.");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshAsync()
    {
        _isRefreshing = true;
        StateHasChanged();
        await LoadDataAsync();
        _isRefreshing = false;
        Toast.ShowSuccess("Données actualisées.");
        StateHasChanged();
    }

    private async Task CopierListeAnniversaires()
    {
        await CopierListeContacts(_anniversairesCeMois, "ce mois");
    }

    private async Task CopierListeMoisProchain()
    {
        await CopierListeContacts(_anniversairesMoisProchain, "du mois prochain");
    }

    private async Task CopierListeContacts(List<Client> clients, string label)
    {
        var lines = clients
            .Select(c => $"{c.NomComplet} — {(string.IsNullOrEmpty(c.NumeroTelephone) ? "Pas de tél." : c.NumeroTelephone)}")
            .ToList();
        var text = string.Join("\n", lines);
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
            Toast.ShowSuccess($"{lines.Count} contact(s) {label} copié(s) !");
        }
        catch
        {
            Toast.ShowWarning("Impossible de copier dans le presse-papier.");
        }
    }

    public void Dispose() { }
}
