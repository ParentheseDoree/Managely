@page "/passages/{Guid}"
@inject PassageService PassageSvc
@inject ClientService ClientSvc
@inject GoogleAuthService AuthService
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<PageTitle>Détail passage - Managely</PageTitle>

@if (_loading) { <LoadingSpinner /> }
else if (_passage == null)
{
    <div class="alert alert-warning">Passage introuvable.</div>
}
else
{
    <div class="page-header">
        <div>
            <h1><i class="bi bi-calendar-check me-2"></i>Passage du @_passage.Date</h1>
            <p>Client : <strong>@_clientNom</strong></p>
        </div>
        <div class="d-flex gap-2">
            @if (AuthService.CanWrite)
            {
                <button class="btn btn-gold" @onclick='() => Nav.NavigateTo($"passages/{Guid}/modifier")'>
                    <i class="bi bi-pencil me-1"></i> Modifier
                </button>
            }
            <button class="btn btn-outline-secondary" @onclick="GoBack">
                <i class="bi bi-arrow-left me-1"></i> Retour
            </button>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            @* Prestations *@
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header pt-3"><h5 class="mb-0"><i class="bi bi-scissors me-2 text-gold"></i>Prestations (@_passage.Prestations.Count)</h5></div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead><tr><th>Soin</th><th class="text-end">Prix</th><th>Durée</th></tr></thead>
                        <tbody>
                            @foreach (var p in _passage.Prestations)
                            {
                                <tr>
                                    <td>@p.Nom</td>
                                    <td class="text-end fw-bold">@p.Prix.ToString("N2") €</td>
                                    <td>@(p.DureeMinutes > 0 ? $"{p.DureeMinutes} min" : "—")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @* Produits vendus *@
            @if (_passage.ProduitsVendus.Count > 0)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header pt-3"><h5 class="mb-0"><i class="bi bi-bag me-2 text-gold"></i>Produits vendus</h5></div>
                    <div class="card-body p-0">
                        <table class="table mb-0">
                            <thead><tr><th>Produit</th><th>Qté</th><th class="text-end">Prix unit.</th><th class="text-end">Total</th></tr></thead>
                            <tbody>
                                @foreach (var p in _passage.ProduitsVendus)
                                {
                                    <tr>
                                        <td>@p.Nom</td>
                                        <td>@p.Quantite</td>
                                        <td class="text-end">@p.PrixUnitaire.ToString("N2") €</td>
                                        <td class="text-end fw-bold">@p.Total.ToString("N2") €</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @* Produits conseillés *@
            @if (_passage.ProduitsConseilles.Count > 0)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header pt-3"><h5 class="mb-0"><i class="bi bi-lightbulb me-2 text-gold"></i>Produits conseillés</h5></div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            @foreach (var p in _passage.ProduitsConseilles)
                            {
                                <li class="mb-2">
                                    <strong>@p.Nom</strong>
                                    @if (!string.IsNullOrEmpty(p.Commentaire))
                                    {
                                        <span class="text-muted"> — @p.Commentaire</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            @* Note interne *@
            @if (!string.IsNullOrEmpty(_passage.NoteInterne))
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header pt-3"><h5 class="mb-0"><i class="bi bi-journal-text me-2 text-gold"></i>Note interne</h5></div>
                    <div class="card-body">
                        <p class="mb-0" style="white-space:pre-wrap;">@_passage.NoteInterne</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Récapitulatif</h5>
                    <dl>
                        <dt class="small text-muted">Date</dt><dd>@_passage.Date</dd>
                        <dt class="small text-muted">Mode de paiement</dt>
                        <dd>@(string.IsNullOrEmpty(_passage.ModePaiement) ? "—" : _passage.ModePaiement)</dd>
                    </dl>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span class="fs-5 fw-bold">Total</span>
                        <span class="fs-5 fw-bold text-gold">@_passage.Total.ToString("N2") €</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Guid { get; set; } = "";
    private Passage? _passage;
    private string _clientNom = "";
    private bool _loading = true;

    private async Task GoBack() => await JSRuntime.InvokeVoidAsync("navigateBack");

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.InitializeAsync();
            if (!AuthService.IsSignedIn || !AuthService.CanRead) { Nav.NavigateTo("login"); return; }

            _passage = await PassageSvc.GetByGuidAsync(Guid);
            if (_passage != null)
            {
                var client = await ClientSvc.GetByGuidAsync(_passage.ClientGuid);
                _clientNom = client?.NomComplet ?? _passage.ClientGuid;
            }
            _loading = false;
            StateHasChanged();
        }
    }
}
