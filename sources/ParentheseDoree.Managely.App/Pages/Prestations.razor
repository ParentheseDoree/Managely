@*
    =============================================================================
    Prestations.razor - Page de gestion des prestations avec CRUD complet
    =============================================================================
*@

@page "/prestations"

@using ParentheseDoree.Managely.App.Services
@using ParentheseDoree.Managely.App.Models

@inject GoogleAuthService AuthService
@inject GoogleSheetsService SheetsService
@inject BrowserLoggerService Logger
@inject NavigationManager NavigationManager

<PageTitle>Prestations - Managely</PageTitle>

@if (!_isAuthenticated)
{
    <div class="text-center py-5">
        <div class="spinner-border text-gold" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
    </div>
}
else
{
    @* En-tête de la page *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-calendar-check me-2"></i>Prestations
            </h1>
            <p class="text-muted mb-0">Historique des soins et passages</p>
        </div>
        
        @if (AuthService.CanWrite)
        {
            <button class="btn btn-gold" @onclick="ShowAddModal">
                <i class="bi bi-plus-lg me-1"></i> Nouvelle prestation
            </button>
        }
    </div>

    @* Message d'alerte *@
    @if (!string.IsNullOrEmpty(_alertMessage))
    {
        <div class="alert @_alertClass alert-dismissible fade show" role="alert">
            @_alertMessage
            <button type="button" class="btn-close" @onclick="() => _alertMessage = string.Empty"></button>
        </div>
    }

    @* Barre de recherche et filtres *@
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" 
                               placeholder="Rechercher..."
                               @bind="_searchTerm" @bind:event="oninput" @onkeyup="FilterPrestations" />
                        @if (!string.IsNullOrEmpty(_searchTerm))
                        {
                            <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        }
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select" @bind="_filterPayee" @bind:after="FilterPrestations">
                        <option value="">Tous les paiements</option>
                        <option value="true">Payées</option>
                        <option value="false">Non payées</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" @onclick="RefreshDataAsync" disabled="@_isLoading">
                        <i class="bi bi-arrow-clockwise me-1 @(_isLoading ? "spin" : "")"></i> Actualiser
                    </button>
                </div>
                <div class="col-md-4 text-end">
                    <span class="text-muted small">
                        @_filteredPrestations.Count prestation(s)
                        @if (_filteredPrestations.Count > 0)
                        {
                            <span class="ms-2 fw-bold">
                                @_filteredPrestations.Sum(p => p.Prix).ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                            </span>
                        }
                    </span>
                </div>
            </div>
        </div>
    </div>

    @* Tableau des prestations *@
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-gold" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (_filteredPrestations.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            @if (string.IsNullOrEmpty(_searchTerm) && string.IsNullOrEmpty(_filterPayee))
            {
                <span>Aucune prestation enregistrée.</span>
            }
            else
            {
                <span>Aucune prestation ne correspond à vos critères.</span>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th @onclick='() => SortBy("Date")' style="cursor:pointer">
                                Date
                                @if (_sortColumn == "Date")
                                {
                                    <i class="bi @(_sortAscending ? "bi-sort-down" : "bi-sort-up") ms-1"></i>
                                }
                            </th>
                            <th @onclick='() => SortBy("ClientNom")' style="cursor:pointer">
                                Client
                                @if (_sortColumn == "ClientNom")
                                {
                                    <i class="bi @(_sortAscending ? "bi-sort-alpha-down" : "bi-sort-alpha-up") ms-1"></i>
                                }
                            </th>
                            <th>Prestation</th>
                            <th @onclick='() => SortBy("Prix")' style="cursor:pointer">
                                Prix
                                @if (_sortColumn == "Prix")
                                {
                                    <i class="bi @(_sortAscending ? "bi-sort-numeric-down" : "bi-sort-numeric-up") ms-1"></i>
                                }
                            </th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prestation in _filteredPrestations)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-calendar3 me-1 text-muted"></i>
                                    @prestation.Date
                                </td>
                                <td>
                                    <strong>@prestation.ClientNom</strong>
                                </td>
                                <td>
                                    @prestation.TypePrestation
                                    @if (!string.IsNullOrEmpty(prestation.Description))
                                    {
                                        <small class="text-muted d-block">@prestation.Description</small>
                                    }
                                </td>
                                <td>
                                    <strong>@prestation.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</strong>
                                </td>
                                <td>
                                    @if (prestation.EstPayee)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Payée
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock me-1"></i>En attente
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-1"
                                            @onclick="() => ShowViewModal(prestation)" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    @if (AuthService.CanWrite)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary me-1"
                                                @onclick="() => ShowEditModal(prestation)" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => ShowDeleteConfirm(prestation)" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

@* Modal d'ajout/modification/vue *@
@if (_showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (_isViewMode)
                        {
                            <i class="bi bi-eye me-2"></i>
                            <text>Détails de la prestation</text>
                        }
                        else if (_editingPrestation.RowIndex == 0)
                        {
                            <i class="bi bi-plus-circle me-2"></i>
                            <text>Nouvelle prestation</text>
                        }
                        else
                        {
                            <i class="bi bi-pencil me-2"></i>
                            <text>Modifier la prestation</text>
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Client <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_editingPrestation.ClientId" 
                                    disabled="@_isViewMode" @bind:after="OnClientSelected">
                                <option value="">-- Sélectionner un client --</option>
                                @foreach (var client in _clients)
                                {
                                    <option value="@client.Id">@client.NomComplet</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="_editingPrestation.Date" 
                                   placeholder="JJ/MM/AAAA" disabled="@_isViewMode" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Type de prestation <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="_editingPrestation.TypePrestation" 
                                   placeholder="Ex: Soin du visage" disabled="@_isViewMode" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Prix (€) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="_editingPrestation.Prix" 
                                   step="0.01" min="0" disabled="@_isViewMode" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Durée (minutes)</label>
                            <input type="number" class="form-control" @bind="_editingPrestation.DureeMinutes" 
                                   min="0" disabled="@_isViewMode" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Mode de paiement</label>
                            <select class="form-select" @bind="_editingPrestation.ModePaiement" 
                                    disabled="@_isViewMode">
                                <option value="">-- Sélectionner --</option>
                                <option value="CB">Carte bancaire</option>
                                <option value="Espèces">Espèces</option>
                                <option value="Chèque">Chèque</option>
                                <option value="Virement">Virement</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="2" @bind="_editingPrestation.Description" 
                                      disabled="@_isViewMode"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" rows="2" @bind="_editingPrestation.Notes" 
                                      disabled="@_isViewMode"></textarea>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       @bind="_editingPrestation.EstPayee" disabled="@_isViewMode" />
                                <label class="form-check-label">Prestation payée</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        @(_isViewMode ? "Fermer" : "Annuler")
                    </button>
                    @if (!_isViewMode)
                    {
                        <button type="button" class="btn btn-gold" @onclick="SavePrestationAsync" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            <i class="bi bi-check-lg me-1"></i> Enregistrer
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
}

@* Modal de confirmation de suppression *@
@if (_showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Confirmer la suppression
                    </h5>
                    <button type="button" class="btn-close" @onclick="() => _showDeleteConfirm = false"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cette prestation ?</p>
                    <p class="mb-0">
                        <strong>@_prestationToDelete?.TypePrestation</strong> - 
                        @_prestationToDelete?.ClientNom - 
                        @_prestationToDelete?.Date
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => _showDeleteConfirm = false">
                        Annuler
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="DeletePrestationAsync" disabled="@_isSaving">
                        @if (_isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-trash me-1"></i> Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .text-gold { color: #d4a574 !important; }
    .spinner-border.text-gold { color: #d4a574 !important; }
    .btn-gold {
        background-color: #d4a574;
        border-color: #d4a574;
        color: white;
    }
    .btn-gold:hover {
        background-color: #c49464;
        border-color: #c49464;
        color: white;
    }
    .spin {
        animation: spin 1s linear infinite;
    }
    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>

@code {
    private bool _isAuthenticated = false;
    private bool _isLoading = true;
    private bool _isSaving = false;
    
    private List<Prestation> _prestations = new();
    private List<Prestation> _filteredPrestations = new();
    private List<Client> _clients = new();
    
    private string _searchTerm = string.Empty;
    private string _filterPayee = string.Empty;
    private string _alertMessage = string.Empty;
    private string _alertClass = "alert-info";
    private string _sortColumn = "Date";
    private bool _sortAscending = false; // Par défaut, les plus récentes en premier

    // Modal
    private bool _showModal = false;
    private bool _isViewMode = false;
    private Prestation _editingPrestation = new();
    
    // Suppression
    private bool _showDeleteConfirm = false;
    private Prestation? _prestationToDelete;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.InitializeAsync();
            
            if (!AuthService.IsSignedIn || !AuthService.CanRead)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            _isAuthenticated = true;
            StateHasChanged();
            
            await LoadDataAsync();
        }
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var prestationsTask = SheetsService.GetPrestationsAsync();
            var clientsTask = SheetsService.GetClientsAsync();

            await Task.WhenAll(prestationsTask, clientsTask);

            _prestations = await prestationsTask;
            _clients = await clientsTask;

            FilterAndSortPrestations();
        }
        catch (Exception ex)
        {
            ShowAlert($"Erreur lors du chargement : {ex.Message}", "alert-danger");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshDataAsync()
    {
        await LoadDataAsync();
    }

    private void FilterAndSortPrestations()
    {
        var query = _prestations.AsQueryable();

        // Filtre par recherche textuelle
        if (!string.IsNullOrWhiteSpace(_searchTerm))
        {
            var term = _searchTerm.ToLower();
            query = query.Where(p =>
                p.ClientNom.ToLower().Contains(term) ||
                p.TypePrestation.ToLower().Contains(term) ||
                p.Description.ToLower().Contains(term) ||
                p.Date.ToLower().Contains(term)
            );
        }

        // Filtre par statut de paiement
        if (!string.IsNullOrEmpty(_filterPayee))
        {
            var estPayee = _filterPayee == "true";
            query = query.Where(p => p.EstPayee == estPayee);
        }

        // Tri
        _filteredPrestations = _sortColumn switch
        {
            "Date" => _sortAscending 
                ? query.OrderBy(p => p.Date).ToList()
                : query.OrderByDescending(p => p.Date).ToList(),
            "ClientNom" => _sortAscending 
                ? query.OrderBy(p => p.ClientNom).ToList()
                : query.OrderByDescending(p => p.ClientNom).ToList(),
            "Prix" => _sortAscending 
                ? query.OrderBy(p => p.Prix).ToList()
                : query.OrderByDescending(p => p.Prix).ToList(),
            _ => query.ToList()
        };
    }

    private void FilterPrestations()
    {
        FilterAndSortPrestations();
        StateHasChanged();
    }

    private void SortBy(string column)
    {
        if (_sortColumn == column)
            _sortAscending = !_sortAscending;
        else
        {
            _sortColumn = column;
            _sortAscending = column != "Date"; // Par défaut décroissant pour les dates
        }
        FilterAndSortPrestations();
        StateHasChanged();
    }

    private void ClearSearch()
    {
        _searchTerm = string.Empty;
        FilterPrestations();
    }

    private void ShowAddModal()
    {
        _editingPrestation = new Prestation
        {
            Date = DateTime.Now.ToString("dd/MM/yyyy")
        };
        _isViewMode = false;
        _showModal = true;
    }

    private void ShowEditModal(Prestation prestation)
    {
        _editingPrestation = new Prestation
        {
            RowIndex = prestation.RowIndex,
            Id = prestation.Id,
            ClientId = prestation.ClientId,
            ClientNom = prestation.ClientNom,
            Date = prestation.Date,
            TypePrestation = prestation.TypePrestation,
            Description = prestation.Description,
            Prix = prestation.Prix,
            DureeMinutes = prestation.DureeMinutes,
            ModePaiement = prestation.ModePaiement,
            EstPayee = prestation.EstPayee,
            Notes = prestation.Notes
        };
        _isViewMode = false;
        _showModal = true;
    }

    private void ShowViewModal(Prestation prestation)
    {
        _editingPrestation = prestation;
        _isViewMode = true;
        _showModal = true;
    }

    private void CloseModal()
    {
        _showModal = false;
        _editingPrestation = new();
    }

    private void OnClientSelected()
    {
        var client = _clients.FirstOrDefault(c => c.Id == _editingPrestation.ClientId);
        if (client != null)
        {
            _editingPrestation.ClientNom = client.NomComplet;
        }
    }

    private async Task SavePrestationAsync()
    {
        // Validation
        if (string.IsNullOrWhiteSpace(_editingPrestation.ClientId))
        {
            ShowAlert("Veuillez sélectionner un client.", "alert-warning");
            return;
        }
        if (string.IsNullOrWhiteSpace(_editingPrestation.Date))
        {
            ShowAlert("La date est obligatoire.", "alert-warning");
            return;
        }
        if (string.IsNullOrWhiteSpace(_editingPrestation.TypePrestation))
        {
            ShowAlert("Le type de prestation est obligatoire.", "alert-warning");
            return;
        }
        if (_editingPrestation.Prix <= 0)
        {
            ShowAlert("Le prix doit être supérieur à 0.", "alert-warning");
            return;
        }

        _isSaving = true;
        StateHasChanged();

        try
        {
            // S'assurer que le nom du client est défini
            OnClientSelected();

            if (_editingPrestation.RowIndex == 0)
            {
                await SheetsService.AddPrestationAsync(_editingPrestation);
                ShowAlert("Prestation ajoutée avec succès.", "alert-success");
            }
            else
            {
                await SheetsService.UpdatePrestationAsync(_editingPrestation);
                ShowAlert("Prestation modifiée avec succès.", "alert-success");
            }

            CloseModal();
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            ShowAlert($"Erreur : {ex.Message}", "alert-danger");
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private void ShowDeleteConfirm(Prestation prestation)
    {
        _prestationToDelete = prestation;
        _showDeleteConfirm = true;
    }

    private async Task DeletePrestationAsync()
    {
        if (_prestationToDelete == null) return;

        _isSaving = true;
        StateHasChanged();

        try
        {
            await SheetsService.DeletePrestationAsync(_prestationToDelete.RowIndex);
            ShowAlert("Prestation supprimée avec succès.", "alert-success");
            _showDeleteConfirm = false;
            _prestationToDelete = null;
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            ShowAlert($"Erreur : {ex.Message}", "alert-danger");
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private void ShowAlert(string message, string alertClass)
    {
        _alertMessage = message;
        _alertClass = alertClass;
    }
}
