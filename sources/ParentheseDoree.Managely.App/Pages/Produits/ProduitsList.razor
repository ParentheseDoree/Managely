@page "/produits"
@inject ProduitService ProduitSvc
@inject MouvementStockService MouvementSvc
@inject ClientService ClientSvc
@inject PassageService PassageSvc
@inject GoogleAuthService AuthService
@inject ToastService Toast
@inject NavigationManager Nav

<PageTitle>Produits - Managely</PageTitle>

<div class="page-header">
    <div>
        <h1><i class="bi bi-box-seam me-2"></i>Produits</h1>
        <p>Gestion des produits et du stock</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        @if (AuthService.CanWrite)
        {
            <button class="btn btn-outline-success" @onclick="ShowVenteRapide">
                <i class="bi bi-cart-plus me-1"></i> Vente rapide
            </button>
            <button class="btn btn-gold" @onclick="ShowAdd">
                <i class="bi bi-plus-lg me-1"></i> Nouveau produit
            </button>
        }
    </div>
</div>

@if (_alertes.Count > 0)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>@_alertes.Count produit(s) en alerte de stock :</strong>
        @string.Join(", ", _alertes.Select(a => $"{a.Nom} ({a.Stock})"))
    </div>
}

<div class="card mb-4 border-0 shadow-sm">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-5">
                <SearchBar Value="@_search" ValueChanged="OnSearch" Placeholder="Rechercher un produit..." />
            </div>
            <div class="col-md-3">
                <select class="form-select" @bind="_filterCategorie" @bind:after="Filter">
                    <option value="">Toutes catégories</option>
                    @foreach (var cat in _categories)
                    {
                        <option value="@cat">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" @onclick="LoadAsync" disabled="@_loading">
                    <i class="bi bi-arrow-clockwise me-1 @(_loading ? "spin" : "")"></i> Actualiser
                </button>
            </div>
            <div class="col-md-2 text-end">
                <span class="text-muted">@_filtered.Count produit(s)</span>
            </div>
        </div>
    </div>
</div>

@if (_loading) { <LoadingSpinner /> }
else if (_filtered.Count == 0)
{
    <div class="alert alert-info"><i class="bi bi-info-circle me-2"></i>Aucun produit trouvé.</div>
}
else
{
    @* Vue mobile *@
    <div class="d-md-none">
        @foreach (var p in _filtered)
        {
            <div class="card border-0 shadow-sm mb-2 @(p.EstEnRupture ? "border-danger border" : p.EstEnAlerte ? "border-warning border" : "")">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong>@p.Nom</strong>
                            @if (!string.IsNullOrEmpty(p.Marque)) { <br /><small class="text-muted">@p.Marque</small> }
                        </div>
                        <div class="text-end">
                            <span class="badge @(p.EstEnRupture ? "bg-danger" : p.EstEnAlerte ? "bg-warning text-dark" : "bg-success") fs-6">@p.Stock</span>
                            <div class="small text-muted mt-1">@p.PrixVente.ToString("N2") €</div>
                        </div>
                    </div>
                    @if (AuthService.CanWrite)
                    {
                        <div class="d-flex gap-2 mt-2">
                            <button class="btn btn-sm btn-outline-success flex-fill" @onclick="() => ShowRestock(p)">
                                <i class="bi bi-plus-circle me-1"></i>Réappro.
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(p)"><i class="bi bi-trash"></i></button>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    @* Vue desktop *@
    <div class="card border-0 shadow-sm d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Marque</th>
                        <th>Catégorie</th>
                        <th class="text-end">Prix vente</th>
                        <th class="text-center">Stock</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in _filtered)
                    {
                        <tr class="@(p.EstEnAlerte ? "table-warning" : "") @(p.EstEnRupture ? "table-danger" : "")">
                            <td><strong>@p.Nom</strong></td>
                            <td>@p.Marque</td>
                            <td>@p.Categorie</td>
                            <td class="text-end">@p.PrixVente.ToString("N2") €</td>
                            <td class="text-center">
                                <span class="badge @(p.EstEnRupture ? "bg-danger" : p.EstEnAlerte ? "bg-warning text-dark" : "bg-success")">@p.Stock</span>
                            </td>
                            <td class="text-end">
                                @if (AuthService.CanWrite)
                                {
                                    <button class="btn btn-sm btn-outline-success me-1" @onclick="() => ShowRestock(p)" title="Réapprovisionner">
                                        <i class="bi bi-plus-circle"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(p)" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@* Modal création produit simplifié *@
@if (_showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-box-seam me-2"></i>Nouveau produit</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <AlertMessage Message="@_formAlert" Type="warning" OnDismiss="() => _formAlert = string.Empty" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Marque</label>
                            <input type="text" class="form-control" @bind="_editing.Marque" placeholder="Ex: Carita" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Nom du produit <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="_editing.Nom" placeholder="Ex: Crème hydratante" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Prix de vente (€) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="_editing.PrixVente" step="0.01" min="0" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Catégorie</label>
                            <input type="text" class="form-control" @bind="_editing.Categorie" placeholder="Ex: Soins visage" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Annuler</button>
                    <button class="btn btn-gold" @onclick="SaveAsync" disabled="@_saving">
                        @if (_saving) { <span class="spinner-border spinner-border-sm me-1"></span> }
                        <i class="bi bi-check-lg me-1"></i>Créer
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Modal vente rapide *@
@if (_showVenteRapide)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-cart-plus me-2"></i>Vente rapide de produit</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => _showVenteRapide = false"></button>
                </div>
                <div class="modal-body">
                    <AlertMessage Message="@_venteAlert" Type="warning" OnDismiss="() => _venteAlert = string.Empty" />
                    <p class="text-muted small mb-3"><i class="bi bi-info-circle me-1"></i>Vendre un produit sans prestation associée.</p>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">Client</label>
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Rechercher un client (optionnel)..."
                                       value="@_venteClientSearch" @oninput="OnVenteClientSearch"
                                       @onfocus="() => _showVenteClientDropdown = true" />
                                @if (_showVenteClientDropdown && _venteClientsFiltered.Count > 0)
                                {
                                    <div class="dropdown-menu show w-100 shadow-sm" style="max-height:200px;overflow-y:auto;z-index:1050;">
                                        @foreach (var c in _venteClientsFiltered.Take(10))
                                        {
                                            <button class="dropdown-item" @onclick="() => SelectVenteClient(c)">
                                                <strong>@c.NomComplet</strong>
                                                @if (!string.IsNullOrEmpty(c.NumeroTelephone)) { <small class="text-muted ms-2">@c.NumeroTelephone</small> }
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Produit <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_venteSelectedProduitGuid">
                                <option value="">-- Choisir un produit --</option>
                                @foreach (var p in _all.Where(p => p.Actif && p.Stock > 0))
                                {
                                    <option value="@p.Guid">@p.Nom (@p.Marque) — @p.PrixVente.ToString("N2") € [stock: @p.Stock]</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Quantité</label>
                            <input type="number" class="form-control" @bind="_venteQuantite" min="1" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Mode de paiement <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_venteModePaiement">
                                <option value="">-- Choisir --</option>
                                <option value="CB">Carte bancaire</option>
                                <option value="Espèces">Espèces</option>
                                <option value="Chèque">Chèque</option>
                                <option value="Virement">Virement</option>
                            </select>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(_venteSelectedProduitGuid))
                    {
                        var selProd = _all.FirstOrDefault(p => p.Guid == _venteSelectedProduitGuid);
                        if (selProd != null)
                        {
                            <div class="alert alert-info small mt-3 mb-0">
                                <strong>Total : @((selProd.PrixVente * _venteQuantite).ToString("N2")) €</strong>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => _showVenteRapide = false">Annuler</button>
                    <button class="btn btn-success" @onclick="VenteRapideAsync" disabled="@_saving">
                        @if (_saving) { <span class="spinner-border spinner-border-sm me-1"></span> }
                        <i class="bi bi-cart-check me-1"></i>Valider la vente
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Modal réapprovisionnement *@
@if (_showRestock)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle text-success me-2"></i>Réapprovisionner : @_restockProduit?.Nom</h5>
                    <button type="button" class="btn-close" @onclick="() => _showRestock = false"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info small mb-3">Stock actuel : <strong>@_restockProduit?.Stock</strong></div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Quantité <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="_restockQuantite" min="1" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Coût unitaire (€)</label>
                            <input type="number" class="form-control" @bind="_restockCout" step="0.01" min="0" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Note</label>
                            <input type="text" class="form-control" @bind="_restockNote" placeholder="Fournisseur, lot..." />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => _showRestock = false">Annuler</button>
                    <button class="btn btn-success" @onclick="RestockAsync" disabled="@_saving">
                        @if (_saving) { <span class="spinner-border spinner-border-sm me-1"></span> }
                        <i class="bi bi-check-lg me-1"></i>Réapprovisionner
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<ConfirmModal IsVisible="_showDelete" Title="Supprimer le produit"
              TitleCss="text-danger" Icon="bi-exclamation-triangle"
              ConfirmText="Supprimer" IsProcessing="_deleting"
              OnConfirm="DeleteAsync" OnCancel="() => _showDelete = false">
    <p>Supprimer <strong>@_toDelete?.Nom</strong> ?</p>
</ConfirmModal>

@code {
    private List<Produit> _all = [], _filtered = [], _alertes = [];
    private List<string> _categories = [];
    private bool _loading = true, _showModal, _saving, _showDelete, _deleting, _showRestock;
    private Produit _editing = new();
    private Produit? _toDelete, _restockProduit;
    private int _restockQuantite = 1;
    private decimal _restockCout;
    private string _restockNote = "";
    private string _search = "", _filterCategorie = "", _formAlert = "";

    // Vente rapide
    private bool _showVenteRapide, _showVenteClientDropdown;
    private string _venteSelectedProduitGuid = "", _venteModePaiement = "", _venteClientSearch = "", _venteClientGuid = "", _venteAlert = "";
    private int _venteQuantite = 1;
    private List<Client> _allClients = [], _venteClientsFiltered = [];

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.InitializeAsync();
            if (!AuthService.IsSignedIn || !AuthService.CanRead) { Nav.NavigateTo("login"); return; }
            await LoadAsync();
        }
    }

    private async Task LoadAsync()
    {
        _loading = true; StateHasChanged();
        try
        {
            _all = await ProduitSvc.GetAllAsync(true);
            _alertes = _all.Where(p => p.Actif && p.EstEnAlerte).ToList();
            _categories = _all.Select(p => p.Categorie).Where(c => !string.IsNullOrEmpty(c)).Distinct().OrderBy(c => c).ToList();
            Filter();
        }
        catch (Exception ex) { Toast.ShowError(ex.Message); }
        finally { _loading = false; StateHasChanged(); }
    }

    private void OnSearch(string val) { _search = val; Filter(); StateHasChanged(); }
    private void Filter()
    {
        var q = _all.AsEnumerable();
        if (!string.IsNullOrWhiteSpace(_search))
        {
            var t = Client.SupprimerAccents(_search.ToLower());
            q = q.Where(p => Client.SupprimerAccents(p.Nom).Contains(t, StringComparison.OrdinalIgnoreCase)
                          || Client.SupprimerAccents(p.Marque).Contains(t, StringComparison.OrdinalIgnoreCase));
        }
        if (!string.IsNullOrEmpty(_filterCategorie))
            q = q.Where(p => p.Categorie == _filterCategorie);
        _filtered = q.OrderBy(p => p.Nom).ToList();
    }

    private void ShowAdd() { _editing = new Produit { Actif = true, SeuilAlerte = 5 }; _showModal = true; _formAlert = ""; }
    private void CloseModal() { _showModal = false; _editing = new(); }
    private void ConfirmDelete(Produit p) { _toDelete = p; _showDelete = true; }
    private void ShowRestock(Produit p) { _restockProduit = p; _restockQuantite = 1; _restockCout = p.PrixAchat; _restockNote = ""; _showRestock = true; }

    private async void ShowVenteRapide()
    {
        _allClients = await ClientSvc.GetAllAsync();
        _venteSelectedProduitGuid = ""; _venteQuantite = 1; _venteModePaiement = "";
        _venteClientSearch = ""; _venteClientGuid = ""; _venteAlert = "";
        _showVenteRapide = true;
        StateHasChanged();
    }

    private void OnVenteClientSearch(ChangeEventArgs e)
    {
        _venteClientSearch = e.Value?.ToString() ?? "";
        _showVenteClientDropdown = true;
        _venteClientGuid = "";
        if (!string.IsNullOrWhiteSpace(_venteClientSearch))
        {
            var t = Client.SupprimerAccents(_venteClientSearch.ToLower());
            _venteClientsFiltered = _allClients
                .Where(c => Client.SupprimerAccents(c.NomComplet).Contains(t, StringComparison.OrdinalIgnoreCase))
                .Take(10).ToList();
        }
        else { _venteClientsFiltered = []; }
    }

    private void SelectVenteClient(Client c)
    {
        _venteClientGuid = c.Guid;
        _venteClientSearch = c.NomComplet;
        _showVenteClientDropdown = false;
    }

    private async Task SaveAsync()
    {
        if (string.IsNullOrWhiteSpace(_editing.Nom)) { _formAlert = "Le nom est requis."; return; }
        if (_editing.PrixVente <= 0) { _formAlert = "Le prix de vente est requis."; return; }
        _saving = true; StateHasChanged();
        try
        {
            await ProduitSvc.AddAsync(_editing);
            CloseModal(); await LoadAsync();
            Toast.ShowSuccess($"Produit « {_editing.Nom} » créé.");
        }
        catch (Exception ex) { Toast.ShowError(ex.Message); }
        finally { _saving = false; StateHasChanged(); }
    }

    private async Task RestockAsync()
    {
        if (_restockProduit == null || _restockQuantite <= 0) return;
        _saving = true; StateHasChanged();
        try
        {
            await MouvementSvc.ReapprovisionnerAsync(_restockProduit.Guid, _restockQuantite, _restockCout, _restockNote);
            _showRestock = false;
            Toast.ShowSuccess($"{_restockQuantite} unité(s) ajoutée(s) au stock de {_restockProduit.Nom}.");
            await LoadAsync();
        }
        catch (Exception ex) { Toast.ShowError(ex.Message); }
        finally { _saving = false; StateHasChanged(); }
    }

    private async Task VenteRapideAsync()
    {
        if (string.IsNullOrEmpty(_venteSelectedProduitGuid)) { _venteAlert = "Sélectionnez un produit."; return; }
        if (string.IsNullOrEmpty(_venteModePaiement)) { _venteAlert = "Sélectionnez un mode de paiement."; return; }
        var produit = _all.FirstOrDefault(p => p.Guid == _venteSelectedProduitGuid);
        if (produit == null) return;
        if (_venteQuantite > produit.Stock) { _venteAlert = "Stock insuffisant."; return; }

        _saving = true; StateHasChanged();
        try
        {
            // Créer un passage sans prestation (vente produit indépendante)
            var passage = new Passage
            {
                ClientGuid = _venteClientGuid,
                Date = DateTime.Now.ToString("dd/MM/yyyy"),
                ProduitsVendus = [new PassageProduitVendu
                {
                    ProduitId = produit.Guid,
                    Nom = produit.Nom,
                    Quantite = _venteQuantite,
                    PrixUnitaire = produit.PrixVente
                }],
                ModePaiement = _venteModePaiement,
                NoteInterne = "Vente rapide de produit (sans prestation)"
            };
            passage.RecalculerTotal();
            await PassageSvc.AddAsync(passage);

            // Décrémenter le stock
            await MouvementSvc.EnregistrerSortieAsync(produit.Guid, _venteQuantite, produit.PrixVente, passage.Guid);

            _showVenteRapide = false;
            Toast.ShowSuccess($"Vente de {_venteQuantite}x {produit.Nom} enregistrée ({passage.Total:N2} €).");
            await LoadAsync();
        }
        catch (Exception ex) { Toast.ShowError(ex.Message); }
        finally { _saving = false; StateHasChanged(); }
    }

    private async Task DeleteAsync()
    {
        if (_toDelete == null) return;
        _deleting = true; StateHasChanged();
        try
        {
            await ProduitSvc.DeleteAsync(_toDelete.RowIndex);
            _showDelete = false; await LoadAsync();
            Toast.ShowSuccess("Produit supprimé.");
        }
        catch (Exception ex) { Toast.ShowError(ex.Message); }
        finally { _deleting = false; StateHasChanged(); }
    }
}
