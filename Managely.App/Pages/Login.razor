@page "/login"
@layout LoginLayout
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Connexion - Managely</PageTitle>

<div class="login-page">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-11 col-sm-8 col-md-6 col-lg-4 col-xl-3">
                <div class="login-card card border-0 shadow-lg">
                    <div class="card-body p-4 p-md-5">
                        <!-- Logo / Titre -->
                        <div class="text-center mb-4">
                            <div class="logo-icon mb-3">
                                <i class="bi bi-grid-3x3-gap-fill"></i>
                            </div>
                            <h1 class="h3 fw-bold mb-1">Managely</h1>
                            <p class="text-muted small">Connectez-vous pour continuer</p>
                        </div>

                        <!-- Message d'erreur -->
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ErrorMessage</div>
                            </div>
                        }

                        <!-- Bouton de connexion Google -->
                        <button class="btn btn-google w-100 py-2" @onclick="LoginWithGoogle" disabled="@IsLoading">
                            @if (IsLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Connexion en cours...</span>
                            }
                            else
                            {
                                <svg class="google-icon me-2" viewBox="0 0 24 24" width="20" height="20">
                                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                </svg>
                                <span>Continuer avec Google</span>
                            }
                        </button>

                        <!-- Footer -->
                        <div class="text-center mt-4">
                            <small class="text-muted">
                                <i class="bi bi-shield-lock me-1"></i>
                                Connexion sécurisée
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Copyright -->
                <p class="text-center text-muted small mt-4">
                    &copy; @DateTime.Now.Year Managely. Tous droits réservés.
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Error { get; set; }

    private string? ErrorMessage { get; set; }
    private bool IsLoading { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Vérifier si l'utilisateur est déjà connecté
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            // Rediriger vers la page d'accueil
            Navigation.NavigateTo("/", forceLoad: false);
            return;
        }

        if (!string.IsNullOrEmpty(Error))
        {
            ErrorMessage = Error;
        }
    }

    private void LoginWithGoogle()
    {
        IsLoading = true;
        Navigation.NavigateToLogin("authentication/login");
    }
}
